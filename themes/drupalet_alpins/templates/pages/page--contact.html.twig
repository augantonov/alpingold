{% set img_uri = node.field_image.entity.uri.value %}
{% set img_url = file_url(img_uri) %}
<nav class="menu-classic menu-fixed align-right" data-menu-anima="fade-in">
	<div class="container">
		<div class="menu-brand"> 
			{% if page.branding %} 
				{{ page.branding }}
			{% endif %}
		</div>
		<i class="menu-btn"></i>
		<div class="menu-cnt">
			{% if page.main_menu %}
			  {{ page.main_menu }}
			{% endif %}
			<div class="menu-right">
				
			</div>
		</div>
	</div>
</nav>

<!-- HEADER START --> 
<header class="header-base">
	<div class="container">
		<h1>{{ page['#title'] }}</h1>
		<h2>{{ header_sub_title }}</h2>
	</div>
</header>
{% set sidebar = 'right' %}



<main>
<!-- CONTENT --> 
{% if page.slideshow_content %}
	{{ page.slideshow_content }}
{% endif %}	

{% if page.help %}
	<div class="help drp-help-region section">
		<div class="container">
			<div class="row">
				{{ page.help }}
			</div>
		</div>
	</div>
{% endif %}
{% if page.before_content %}
	{{ page.before_content }}
{% endif %}



{% if sidebar == 'left' %}
	<section class="section-base">
		<div class="container">
			<div class="row">	
				<div class="col-lg-4">
					{% if page.sidebar_left %}
						{{ page.sidebar_left }}
					{% endif %}
				</div>
				<div class="col-lg-8">
					{% include '@drupalet_alpins/pages/main.html.twig' %}	
				</div>
			</div>
		</div>
	</section>
	
{% else %}
<section class="section-base">
	<div class="container">
		<div class="row">	

				<div class="col-lg-8 content-page-taxonomy">
					
						{% include '@drupalet_alpins/pages/main.html.twig' %}	
					
				</div>
				<div class="col-lg-4">
					{% if page.contact_info %}
						{{ page.contact_info }}
					{% endif %}
				</div>
			</div>
		</div>
	</section>



{% endif %}
{% if page.content_bottom %}
	{{ page.content_bottom }}
{% endif %}

</main>

<!-- FOOTER START --> 
	{% include '@drupalet_alpins/footer_styles/footer-classic.html.twig' %}
<!-- FOOTER END --> 